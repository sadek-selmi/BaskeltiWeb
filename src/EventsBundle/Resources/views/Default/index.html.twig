{% extends  'layout.html.twig' %}
{% block content %}
    <div class="event-breadcrumb">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-5 col-6">
                    <div class="row">
                        <div class="left">
                            <img src="{{ asset('front/img/breadcrumb/breadcrumb4.png') }}" alt="">
                        </div>
                    </div>
                </div>

                <div class="col-lg-7 col-6">

                    <div class="row">
                        <div class="breadcrumb-style-5">
                            <div class="breadcrumb-inner">

                                <h1 class="page-title">Events</h1>
                                <ul class="page-list">
                                    <li><a href="{{ path('Formulaire') }}">Add Event<i class="fa-send"></i></a></li>
                                    <li><a href="#">Events</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="event-slider-area">
        <div class="container-fluid">
            <div class="event-slider row">
                {% for e in events %}

                <div class="single-item">
                    <div class="item-left">

                        <div class="left">
                            <div class="time">
                                <h3>{{ e.start |date("d/m") }}</h3>
                                <span>{{ e.start|date('H:i') }}</span>
                            </div>
                            <span class="text">{{ e.name }}</span>
                            <p>{{ e.description }}</p>
                            <a href="{{ path('event_details' , {'id':e.id }) }}" class="btn sm-btn">Read More</a>
                        </div>
                    </div>
                    <div class="item-right">
                        <img src="{{ asset('') }}{{ vich_uploader_asset(e, 'imageFile') }}" alt="event">
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>

    </div>
    <div class="event-tab">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="tab-accordion">
                        <div class="tab">
                            <ul>
                                <li class="tab-one active">Happening</li>
                                <li class="tab-second">Upcoming</li>
                                <li class="tab-three">Expired</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="tab-content">
                        {% for e in events %}
                            <div class="tab-one-content inactive active">
                                <div class="event-left-content">
                                    <div class="img-item row">
                                        <div class="col-lg-4">
                                            <div class="row h-100">
                                                <div class="img-left">
                                                    <img src="{{ asset('') }}{{ vich_uploader_asset(e, 'imageFile') }}"
                                                         alt="">
                                                    <div class="time">
                                                        <h3>{{ e.start |date("d/m") }}</h3>
                                                        <span>{{ e.start|date('H:i') }}</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-7 offset-lg-1 d-flex align-items-center">
                                            <div class="content">
                                                <span class="text">{{ e.name }}</span>
                                                <h4>{{ e.start|date }} - {{ e.end|date }},<b>{{ e.location }}</b></h4>
                                                <p> {{ e.description }}</p>
                                                <div class="margin-top-30 margin-bottom-30 btn-wrapper desktop-left">
                                                    {% if app.user %}
                                                        <a href="{{ path('edit_events',{id:e.id}) }}"
                                                           class="btn "     ><i class="fa fa-edit"></i>Update</a>
                                                        <a href="{{ path('delete_events',{id:e.id}) }}" class="btn "><i class="fa fa-remove"></i>Remove</a>

                                                        <a href="{{ path('participer' , {'id':e.id }) }}" class="btn "><i class="fa fa-check-square-o"></i>participate
                                                    </a>
                                                    {% endif %}


                                                    <a href="#" class="btn "><i class="fa fa-star"></i>
                                                        Intersted</a>


                                                    <a href="{{ path('event_details' , {'id':e.id }) }}"
                                                       class="btn black-btn"><i class="fa fa-sign-in"></i> Details
                                                        </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        {% endfor %}


                    </div>
                </div>
            </div>
        </div>
        <div class="navigation">
            {{ knp_pagination_render(events) }}
        </div>
    </div>

{% endblock %}